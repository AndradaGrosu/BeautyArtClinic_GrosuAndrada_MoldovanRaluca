@page "{id:int?}"
@model BeautyArtClinic_GrosuAndrada_MoldovanRaluca.Pages.Servicii.IndexModel

@{
    ViewData["Title"] = "Index";
}
<h2>Servicii Medicale</h2>


<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.TitleSort">
                @Html.DisplayNameFor(model => model.Serviciu[0].DENUMIRE)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].DESCRIERE)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].PRET)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].Departament)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Serviciu[0].Medic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Serviciu) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DENUMIRE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DESCRIERE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PRET)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Departament.NumeDepartament)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Medic.NumeMedic)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
